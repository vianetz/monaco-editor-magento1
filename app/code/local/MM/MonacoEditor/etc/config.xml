<?xml version="1.0"?>
<config>
    <modules>
        <MM_MonacoEditor>
            <version>1.0.0</version>
        </MM_MonacoEditor>
    </modules>

    <global>
        <blocks>
            <mm_monacoeditor>
                <class>MM_MonacoEditor_Block</class>
            </mm_monacoeditor>
        </blocks>
        <helpers>
            <mm_monacoeditor>
                <class>MM_MonacoEditor_Helper</class>
            </mm_monacoeditor>
        </helpers>
        <models>
            <mm_monacoeditor>
                <class>MM_MonacoEditor_Model</class>
            </mm_monacoeditor>
        </models>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <mm_monacoeditor>
                    <file>mm/monacoeditor.xml</file>
                </mm_monacoeditor>
            </updates>
        </layout>
        <events>
            <cms_wysiwyg_config_prepare>
                <observers>
                    <mm_monacoeditor>
                        <type>singleton</type>
                        <class>MM_MonacoEditor_Model_Observer</class>
                        <method>disableWysiwygEditor</method>
                    </mm_monacoeditor>
                </observers>
            </cms_wysiwyg_config_prepare>
        </events>
    </adminhtml>

    <default>
        <cms>
            <mm_monacoeditor>
                <enabled>1</enabled>
                <editorjs_url_prefix>https://unpkg.com/monaco-editor@latest/min/</editorjs_url_prefix>
                <emmetjs_url_prefix>https://unpkg.com/emmet-monaco-es/dist/</emmetjs_url_prefix>
                <tailwindcss>1</tailwindcss>
                <tailwindcss_prefix_value>tw-</tailwindcss_prefix_value>
                <textarea_config>
                    <cms_page>
                        <page_content>
                            <id>page_content</id>
                            <language>html</language>
                        </page_content>
                        <page_layout_update_xml>
                            <id>page_layout_update_xml</id>
                            <language>xml</language>
                        </page_layout_update_xml>
                        <page_custom_layout_update_xml>
                            <id>page_custom_layout_update_xml</id>
                            <language>xml</language>
                        </page_custom_layout_update_xml>
                    </cms_page>
                    <cms_block>
                        <block_content>
                            <id>block_content</id>
                            <language>html</language>
                        </block_content>
                    </cms_block>
                    <system_email_template>
                        <template_text>
                            <id>template_text</id>
                            <language>html</language>
                        </template_text>
                    </system_email_template>
                    <catalog_product>
                        <description>
                            <id>description</id>
                            <language>html</language>
                        </description>
                        <short_description>
                            <id>short_description</id>
                            <language>html</language>
                        </short_description>
                    </catalog_product>
                </textarea_config>
            </mm_monacoeditor>
        </cms>
    </default>
</config>
