<?xml version="1.0"?>
<config>
    <sections>
        <cms>
            <groups>
                <mm_monacoeditor translate="label" module="mm_monacoeditor">
                    <label>Monaco Editor Options</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Monaco Editor</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <tailwindcss translate="label">
                            <label>Enable Tailwindcss Intellisense</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>20</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </tailwindcss>
                        <tailwindcss_prefix translate="label">
                            <label>Configure Tailwindcss Prefix</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>30</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <tailwindcss>1</tailwindcss>
                            </depends>
                        </tailwindcss_prefix>
                        <tailwindcss_prefix_value translate="label">
                            <label>Tailwindcss Prefix</label>
                            <comment>
                            <![CDATA[
                            Custom Prefix for Tailwindcss classes, example "tw-"
                            ]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <tailwindcss_prefix>1</tailwindcss_prefix>
                            </depends>
                        </tailwindcss_prefix_value>
                    </fields>
                </mm_monacoeditor>
                <wysiwyg>
                    <fields>
                        <disable_wysiwyg_static_block translate="label">
                            <label>Disable WYSIWYG for Static Blocks</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>50</sort_order>
                            <source_model>mm_monacoeditor/system_config_source_cms_blocks</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </disable_wysiwyg_static_block>
                        <disable_wysiwyg_static_page translate="label">
                            <label>Disable WYSIWYG for Cms Pages</label>>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>51</sort_order>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </disable_wysiwyg_static_page>
                    </fields>
                </wysiwyg>
            </groups>
        </cms>
    </sections>
</config>